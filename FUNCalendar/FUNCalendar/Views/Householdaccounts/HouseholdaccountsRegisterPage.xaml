<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="FUNCalendar.Views.HouseholdAccountsRegisterPage">
    <StackLayout>
        <Button Text="収入" Command="{Binding IncomeCommand}" FontAttributes="{Binding IncomeFontAttributes.Value}"/>
        <Button Text="支出" Command="{Binding OutgoingCommand}" FontAttributes="{Binding OutgoingFontAttributes.Value}"/>
        <Picker ItemsSource="{Binding ScategoryNames}"
                SelectedItem="{Binding CurrentScategory.Value}"
                ItemDisplayBinding="{Binding ScategoryName}"
                WidthRequest="400"/>
        <Picker ItemsSource="{Binding DcategoryNames}"
                SelectedItem="{Binding CurrentDcategory.Value}"
                ItemDisplayBinding="{Binding DcategoryName}"/>
        <Picker ItemsSource="{Binding StorageNames}"
                SelectedItem="{Binding CurrentStorageType.Value}"
                ItemDisplayBinding="{Binding StorageTypeName}"/>
        <DatePicker Date="{Binding Date.Value}" Grid.Row="1" Grid.Column="2" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"/>
        <Entry Text="{Binding Name.Value}" FontSize="Large" Placeholder="商品名を入力" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Entry Text="{Binding Price.Value}" FontSize="Large" Placeholder="値段を入力" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Text="登録" BackgroundColor="{Binding ErrorColor.Value}" IsEnabled="{Binding CanRegister.Value}" Command="{Binding RegisterHouseholdaccountsCommand}" Grid.Row="7" Grid.Column="1" />
        <Button Text="キャンセル" BackgroundColor="DarkGray" Command="{Binding CancelCommand}" Grid.Row="7" Grid.Column="2" />

    </StackLayout>
